<UserControl x:Class="Task10.Views.CoursesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:l="clr-namespace:Task10.Views"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GridSplitter Width="3" Background="Transparent" Panel.ZIndex="1000"/>
        <GroupBox Grid.Column="0" Header="Courses">
            <ListBox/>
        </GroupBox>
        <GroupBox Grid.Column="1" Header="Course details">
            
        </GroupBox>
    </Grid>
</UserControl>
