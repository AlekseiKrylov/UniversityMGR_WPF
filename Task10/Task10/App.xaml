<Application x:Class="Task10.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:l="clr-namespace:Task10"
             xmlns:vm="clr-namespace:Task10.ViewModels"
             xmlns:cmd="clr-namespace:Task10.Infrastructure.Commands"
             StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/GridSplitters.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <vm:ViewModelLocator x:Key="vmLocator" />
            <cmd:CloseAppCommand x:Key="CloseAppCommand" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
